<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.skrtdesk.controller.LoginController"
           styleClass="auth-background" prefWidth="1280" prefHeight="800">
    
    <!-- Centered Container -->
    <VBox alignment="CENTER" spacing="0.0" VBox.vgrow="ALWAYS">
        
        <!-- Login Card -->
        <VBox alignment="CENTER" spacing="0.0" styleClass="auth-card">
            
            <!-- Gradient Accent Bar -->
            <Region style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); 
                          -fx-background-radius: 12 12 0 0; -fx-pref-height: 4px;" />
            
            <VBox alignment="CENTER" spacing="32.0">
                <padding>
                    <Insets top="48.0" right="48.0" bottom="48.0" left="48.0"/>
                </padding>
                
                <!-- Header -->
                <VBox alignment="CENTER" spacing="12.0">
                    <Text text="SKRT Social" styleClass="h1-text" style="-fx-fill: #667eea;" />
                    <Text text="Welcome back!" styleClass="body-large" style="-fx-fill: #6B7280;" />
                </VBox>
                
                <!-- Form Fields -->
                <VBox spacing="24.0" prefWidth="360.0">
                    <VBox spacing="8.0">
                        <Label text="Email" styleClass="label" />
                        <TextField fx:id="emailField" promptText="name@example.com" 
                                   style="-fx-pref-height: 48px;" />
                    </VBox>
                    
                    <VBox spacing="8.0">
                        <Label text="Password" styleClass="label" />
                        <PasswordField fx:id="passwordField" promptText="Enter your password" 
                                       style="-fx-pref-height: 48px;" />
                    </VBox>
                    
                    <Label fx:id="errorLabel" styleClass="error-label" visible="false" managed="false" 
                           wrapText="true" />
                </VBox>
                
                <!-- Login Button -->
                <Button fx:id="loginButton" text="Sign In" onAction="#handleLogin" 
                        styleClass="primary-button" prefWidth="360.0"
                        style="-fx-pref-height: 48px;" />
                
                <!-- Register Link -->
                <HBox alignment="CENTER" spacing="6.0">
                    <Label text="Don't have an account?" styleClass="small-text" />
                    <Hyperlink text="Create one" onAction="#handleRegisterLink" styleClass="small-text" />
                </HBox>
            </VBox>
        </VBox>
    </VBox>
</StackPane>

