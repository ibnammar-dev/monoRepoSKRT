<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="0.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.skrtdesk.controller.CreatePostController"
      prefWidth="600.0" styleClass="modal-content">
    
    <!-- Gradient Accent Bar -->
    <Region style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); 
                  -fx-pref-height: 4px;" />
    
    <!-- Content -->
    <VBox spacing="24.0">
        <padding>
            <Insets top="32.0" right="32.0" bottom="32.0" left="32.0"/>
        </padding>
        
        <!-- Title -->
        <Label text="Create Post" styleClass="h3-text" />
        
        <!-- Text Area -->
        <VBox spacing="8.0">
            <Label text="What's on your mind?" styleClass="label" />
            <TextArea fx:id="textArea" promptText="Share your thoughts..." 
                      wrapText="true" prefRowCount="6"
                      style="-fx-font-size: 15px; -fx-padding: 12px; 
                             -fx-border-color: #E8ECF2; -fx-border-width: 1px;
                             -fx-border-radius: 8px; -fx-background-radius: 8px;" />
        </VBox>
        
        <!-- Image Upload Section -->
        <VBox spacing="12.0" styleClass="card"
              style="-fx-background-color: #F7F9FC; -fx-padding: 16px; 
                     -fx-border-color: #E8ECF2; -fx-border-width: 1px;
                     -fx-border-radius: 8px; -fx-background-radius: 8px;">
            <HBox spacing="12.0" alignment="CENTER_LEFT">
                <Button text="ðŸ“· Choose Image" onAction="#handleChooseImage" 
                        styleClass="secondary-button" style="-fx-pref-height: 40px;" />
                <Label fx:id="imageLabel" text="No image selected" styleClass="small-text" 
                       style="-fx-text-fill: #6B7280;" />
            </HBox>
        </VBox>
        
        <!-- Error Label -->
        <Label fx:id="errorLabel" styleClass="error-label" visible="false" managed="false" 
               wrapText="true" />
        
        <!-- Action Buttons -->
        <HBox spacing="12.0" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCancel" 
                    styleClass="secondary-button" style="-fx-pref-height: 48px; -fx-pref-width: 100px;" />
            <Button fx:id="postButton" text="Post" onAction="#handlePost" 
                    styleClass="primary-button" style="-fx-pref-height: 48px; -fx-pref-width: 120px;" />
        </HBox>
    </VBox>
</VBox>

